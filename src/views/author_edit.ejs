<%- include('partials/_header'); -%>
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-6 offset-3">
        <div class="card">
          <div class="card-body">
            <form action="/update/<%= data.author_id %>" method="post">
              <!-- en los name van los campos de la tabla de bd -->
              <div class="form-group">
                <input type="text" name="name" value="<%= data.name %>" 
                class="form-control">
              </div>
              <div class="form-group">
                <input type="text" name="nacionality" value="<%= data.nacionality %>"
                class="form-control">
              </div>
              <button type="submit" class="btn btn-dark">Edit Author</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>  
