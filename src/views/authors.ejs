<%- include('partials/_header'); -%>
<div class="container">
  <div class="row mt-5">
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead class="text-center">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Nationality</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
          <% data.forEach(function(author) { %>
          <tr>
            <td><%= author.author_id %></td>
            <td><%= author.name %></td>
            <td><%= author.nacionality %></td>
            <td>
              <a href="/delete/<%= author.author_id %>" class="btn btn-danger">Delete</a>
              <a href="/update/<%= author.author_id %>" class="btn btn-primary">Edit</a>
            </td>
          </tr>
          <% }); %>
          <% } %>
        </tbody>
      </table>
      <nav aria-label="Page navigation example">
        <ul class="pagination">
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
          <li class="page-item"><a class="page-link" href="#">1</a></li>
          <li class="page-item"><a class="page-link" href="#">2</a></li>
          <li class="page-item"><a class="page-link" href="#">3</a></li>
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        </ul>
      </nav>
    </div>
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/add" method="post">
            <!-- en los name van los campos de la tabla de bd -->
            <div class="form-group">
              <input type="text" name="name" placeholder="Name" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="nacionality" placeholder="Nacionality" class="form-control">
            </div>
            <button type="submit" class="btn btn-dark">Save Author</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('partials/_footer'); -%>